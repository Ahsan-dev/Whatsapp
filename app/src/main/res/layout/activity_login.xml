<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/whatsapp_login_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp Login"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                />
            <EditText
                android:id="@+id/whatsapp_login_email_phn_Edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatsapp_login_image"
                android:background="@drawable/input"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:padding="5dp"
                android:hint="Enter Email..."
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/email"
                android:textColorHint="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/whatsapp_login_pass_Edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whatsapp_login_email_phn_Edt"
                android:layout_marginTop="6dp"
                android:background="@drawable/input"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:padding="5dp"
                android:hint="Enter Password...."
                android:drawableStart="@drawable/password"
                android:textColorHint="@color/colorPrimaryDark">
            </EditText>



            <TextView
                android:id="@+id/login_forget_pass_linkId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/whatsapp_login_pass_Edt"
                android:text="Forget Password?"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="textEnd"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:clickable="true"
                />
            <Button
                android:id="@+id/login_email_loginBtnId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/login_forget_pass_linkId"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/login_create_account_Id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/login_email_loginBtnId"
                android:text="Create New Account"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/login_with_your_phnTxt_Id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/login_create_account_Id"
                android:text="Or, login with your phone number"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:textSize="20dp"
                android:clickable="true"/>

            <Button
                android:id="@+id/login_phn_loginBtnId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login with Phone"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/login_with_your_phnTxt_Id"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/phone"
                />






        </RelativeLayout>
    </ScrollView>
</RelativeLayout>