<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity">

    <include

        layout="@layout/app_bar_layout"
        android:id="@+id/chat_toolbarId"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/chat_messages_recyclerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chat_toolbarId"
        android:layout_above="@id/chat_edt_btn_linear"
        />

    <LinearLayout
        android:id="@+id/chat_edt_btn_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <EditText
            android:id="@+id/private_chat_msg_EdtId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:hint="Enter message here....."
            android:padding="15dp" />

        <ImageButton
            android:id="@+id/private_chat_sendBtnId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:src="@drawable/send_message"

            />


    </LinearLayout>

</RelativeLayout>