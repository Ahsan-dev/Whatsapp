<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <ImageView
        android:id="@+id/profile_cover_imageId"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/proimg"
        android:scaleType="centerCrop"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_user_imageId"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        />
    <TextView
        android:id="@+id/profile_user_nameId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_user_imageId"
        android:text="User Name"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="#0A2CA5"
        />
    <TextView
        android:id="@+id/profile_user_statusId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_user_nameId"
        android:text="User Name"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"

        />

    <Button
        android:id="@+id/profile_send_msg_requestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_user_statusId"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:text="Send Message"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/profile_cancel_chat_requestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_send_msg_requestBtn"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/button"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:layout_marginTop="5dp"
        android:text="Remove Request"
        android:textSize="20sp"
        android:visibility="invisible"
        />

</RelativeLayout>