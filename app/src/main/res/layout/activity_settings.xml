<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <include
        android:id="@+id/settings_toolbar_Id"
        layout="@layout/app_bar_layout"/>

    <ScrollView
        android:layout_below="@id/settings_toolbar_Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_user_imageId"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile_image"
                app:civ_border_width="5dp"
                app:civ_border_color="@color/colorPrimaryDark"
                />
            <EditText
                android:id="@+id/settings_userName_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_user_imageId"
                android:background="@drawable/input"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:drawableStart="@drawable/edit_profile"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="UserName......"
                android:textAlignment="center"
                />
            <EditText
                android:id="@+id/settings_userStatus_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_userName_Id"
                android:background="@drawable/input"
                android:padding="5dp"
                android:drawableStart="@drawable/edit_status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:hint="UserName......"
                android:textAlignment="center"
                />
            <Button
                android:id="@+id/settings_updateButton_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_userStatus_Id"
                android:background="@drawable/button"
                android:padding="5dp"
                android:text="Update"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:textAlignment="center"
                />




        </RelativeLayout>



    </ScrollView>

</RelativeLayout>