<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp">
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_imageId"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"/>
        <LinearLayout
            android:id="@+id/userNmLinearId"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_profile_imageId"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:textColor="@android:color/background_dark"
                    android:id="@+id/user_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textSize="25sp"
                    android:layout_marginLeft="15dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/online"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp"
                    android:visibility="invisible"
                    />



            </LinearLayout>


            <TextView
                android:id="@+id/user_status_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Status"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                />


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/requests_acceptBtnId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:padding="0dp"
                    android:background="#0FBF09"
                    android:layout_marginLeft="10dp"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:textColor="@android:color/white"
                    android:visibility="invisible"
                    />
                <Button
                    android:id="@+id/requests_cancelBtnId"
                    android:layout_marginLeft="15dp"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:background="#E80A11"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                    android:textColor="@android:color/white"
                    android:visibility="invisible"
                    />




            </LinearLayout>


        </LinearLayout>










    </RelativeLayout>


</android.support.v7.widget.CardView>